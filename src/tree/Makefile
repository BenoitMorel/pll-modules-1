# Profiling
#PROFILING=-g -pg
PROFILING=-g
CC = gcc

# Compiler warnings
ifeq ($(CC),clang)
	ADD_WARN=-Weverything -Wno-padded
endif
WARN=-Wall -Wsign-compare $(ADD_WARN)

AR = ar
CFLAGS = -D_GNU_SOURCE -DHAVE_AVX -fPIC $(PROFILING) -msse3 -O3 -I../../libs/libpll/src $(WARN)
LINKFLAGS=$(PROFILING)
LIBS=-lpll -lm

PROG=libpll_tree.so

all: $(PROG)

OBJS=pll_tree.o utree_operations.o utree_distances.o

$(PROG): $(OBJS)
	$(CC) -shared -Wl,-soname,$@ -o $@ $+

%.o: %.c
	$(CC) $(CFLAGS) -c -o $@ $<

clean:
	rm -f *~ $(OBJS) gmon.out $(PROG)
